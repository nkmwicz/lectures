    {
      "number": 4.1,
      "slide": true,
      "centered": true,
      "title": "Push Factors",
      "text": [
        {
          "text": "Push Factors are reasons driving people from a place",
          "color": "lightgray"
        },
        {
          "text": "Examples:",
          "color": "darkslategray",
          "children": [
            {
              "text": "Economic",
              "color": "darkslategray"
            },
            {
              "text": "Political",
              "color": "darkslategray"
            },
            {
              "text": "Environmental",
              "color": "darkslategray"
            }
          ]
        }
      ]
    },
    {
      "number": 4.2,
      "slide": true,
      "centered": true,
      "title": "Push Factors",
      "text": [
        {
          "text": "Push Factors are reasons driving people from a place",
          "color": "darkslategray"
        },
        {
          "text": "Examples:",
          "color": "lightgray",
          "children": [
            {
              "text": "Poverty or lack of opportunity",
              "color": "lightgray"
            },
            {
              "text": "Forced Expulsion",
              "color": "lightgray"
            },
            {
              "text": "Environmental Disaster",
              "color": "lightgray"
            }
          ]
        }
      ]
    },
    {
